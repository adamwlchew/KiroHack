{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@pageflow/types/*": ["packages/types/src/*"],
      "@pageflow/utils/*": ["packages/utils/src/*"],
      "@pageflow/db-utils/*": ["packages/db-utils/src/*"],
      "@pageflow/testing/*": ["packages/testing/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/utils" },
    { "path": "./packages/db-utils" },
    { "path": "./packages/testing" }
  ]
}